<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: #99daba; -fx-padding: 20; -fx-border-color: #008080; -fx-border-width: 5px; -fx-border-radius: 10px; -fx-background-radius: 10px;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="automatatheory.TuringMachineController">
   <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #004d4d;" text="Turing Machine" />

   <HBox alignment="CENTER" spacing="10">
      <TextField fx:id="number1Field" promptText="Number 1" />
      <TextField fx:id="number2Field" promptText="Number 2" />
   </HBox>

   <HBox alignment="CENTER" spacing="10">
      <Button fx:id="additionButton" text="Add" />
      <Button fx:id="subtractionButton" text="Subtract" />
   </HBox>

   <Label fx:id="resultLabel" text="Result: " />
   <Label fx:id="binaryResultLabel" text="Binary: " />
   <Label fx:id="binaryConversionMessage" text="No conversion yet" />

   <HBox fx:id="inputTape" alignment="CENTER" spacing="5" style="-fx-padding: 10;" />

   <TextArea fx:id="transitionLog" editable="false" prefHeight="150" prefWidth="400" />

   <HBox alignment="CENTER" spacing="10">
      <Button fx:id="stepButton" text="Step" />
      <Button fx:id="runButton" text="Run" />
      <Button fx:id="pauseButton" text="Pause" />
      <Button fx:id="stopButton" text="Stop" />
      <Button fx:id="skipButton" text="Skip to Halt" />
   </HBox>
</VBox>
